<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pazienti.helpmeout.activities.LoginActivity"
     >

    <ImageView
        android:id="@+id/login_layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_pazienti" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_vertical_margin" >

        <Button
            style="@style/PazientiOrangeButton"
            android:id="@+id/cmdLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLoginCode"
            android:layout_centerHorizontal="true"
            android:text="@string/login_button_label" />

        <EditText
            android:id="@+id/txtLoginCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/login_code_text_hint"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

</RelativeLayout>
